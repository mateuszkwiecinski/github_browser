<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainList"
    >

    <fragment
        android:id="@+id/mainList"
        android:name="pl.mkwiecinski.presentation.list.ui.ListFragment"
        android:label="@string/list_title"
        tools:layout="@layout/fragment_list"
        >

        <action
            android:id="@+id/action_list_to_details"
            app:destination="@id/details"
            />

        <action
            android:id="@+id/action_list_to_keyboard"
            app:destination="@id/keyboard"
            />
    </fragment>

    <fragment
        android:id="@+id/details"
        android:name="pl.mkwiecinski.presentation.details.ui.DetailsFragment"
        android:label="@string/details_title"
        tools:layout="@layout/fragment_details"
        >

        <argument
            android:name="name"
            app:argType="string"
            />
    </fragment>

    <fragment
        android:id="@+id/keyboard"
        android:name="pl.mkwiecinski.presentation.details.ui.DetailsFragment"
        android:label="Keyboard"
        />
</navigation>
